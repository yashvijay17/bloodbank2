<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.srishti.myapplication.hos_profile"
    android:background="@drawable/hello"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HOSPITAL WALL"
        android:id="@+id/textView22"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img4"
        android:src="@drawable/ask"
        android:layout_below="@+id/textView22"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img5"
        android:src="@drawable/boodstatus"
        android:layout_below="@+id/textView39"
        android:layout_alignLeft="@+id/img4"
        android:layout_alignStart="@+id/img4" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img6"
        android:src="@drawable/bloodevents"
        android:layout_below="@+id/textView40"
        android:layout_alignLeft="@+id/img5"
        android:layout_alignStart="@+id/img5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Post blood requirements"
        android:id="@+id/textView39"
        android:layout_below="@+id/img4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="View blood bank status"
        android:id="@+id/textView40"
        android:layout_below="@+id/img5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Organize events"
        android:id="@+id/textView41"
        android:layout_below="@+id/img6"
        android:layout_alignRight="@+id/img6"
        android:layout_alignEnd="@+id/img6" />

</RelativeLayout>
